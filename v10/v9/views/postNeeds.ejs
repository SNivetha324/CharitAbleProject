<%- include("header") -%>    <section>
        <main class="container-fluid">
            
                <h1>Post your needs here!</h1><br><br>
                
                <div class="container text-center " id="needs">
                    <div class="row">
                        <div class="col-12 border border-danger py-4 mb-2">
                            
                            <form method="post" action="/needs" id="needform"  >
                                <label class="mb-4 text-danger h3">Enter Details: </label><br>
                                <input type="text" id="need_name" name="need_name" class="mb-4" placeholder="Product name here" ><br>
                                <textarea name="need_details" id="need_details" cols="40" rows="3" class="mb-4" placeholder="Write details here" ></textarea>
                                <br>
                                <button type="submit" class="btn btn-danger">Post</button>
                            </form>
                            <br><br>

                        </div>
                    </div>

                    <% if (message) { %>
                        <p><%= message %></p>
                    <% } %>
                  
                    <div class="row">
                        <%   var nameArr=[];
                             var remarks=[];
              
                        needsArray.forEach((element) => {
                        nameArr.push(element.ITEM_NAME);
                        remarks.push(element.REMARKS);
                
                        });
                        nameArr.forEach(function(element,index) {  %>
                      <div class="col">
                        
                        <div class="bg-light my-2" id="need-container">
                            <h5 class="mt-2 text-danger"><%= nameArr[index] %></h5>
                            <p id="need1" cols="20" rows="3"  readonly="true" class="mb-2 text-dark" form=""><%=remarks[index] %></p>
                        </div>
                      </div>
                      <%  }); %>
                     
                  </div>
            
        </main>
       
    </section>

    <%- include("footer") -%>
      
     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
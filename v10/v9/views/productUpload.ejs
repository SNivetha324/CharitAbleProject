<%- include("header") -%>
    <section id="product_description" class="my-5">
        <div class="card" >
            <div class="conainter bg-dark">
              <form action="/donate" method="POST" enctype="multipart/form-data" id="myForm">
                <div class="row ">
                    <div class="col-5">
                      <div class="d-flex justify-content-center align-items-center p-5">
                      <table>
                        <tr class="d-flex justify-content-center">
                          <td>
                            <h5 class="text-white">Upload image:</h5> <br>

                          </td>
                        </tr>
                        <tr class="d-flex justify-content-center">
                          <td >
                            <img id="preview" alt="Image Preview" style="width: 20vw;" src="../assets/egproduct.png">      
                                                 
                        
                            <input type="file" id="img" name="img" accept="image/*"  placeholder="Uploaded image" onchange="previewImage(event)" >  
                          
                          </td>
                        </tr>
                      </table>
                     
                     
                    </div>
                  </div>
                    <div class="col">
                        <div class="card-body">
                            <table class="table table-dark table-striped table-hover table-borderless">
                              <tr>
                                <td colspan="2" style="text-align: center;">
                                  ENTER PRODUCT DETAILS:
                                </td>
                              </tr>
                                <tr>
                                    <td>
                                        Product Name:
                                    </td>
                                    <td>
                                        <input type="text" name="prod_name" >
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Product Catergory:
                                    </td>
                                    <td>
                                      <select name="Catergory" id="Catergory">
                                        <option value="Furniture">Furniture</option>
                                        <option value="Books">Books</option>
                                        <option value="Household">Household</option>
                                        <option value="Electronics">Electronics</option>
                                        <option value="Auto">Auto</option>
                                        <option value="Computers">Computers</option>
                                        <option value="Other">Other</option>
                                      </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Product condition:
                                    </td>
                                    <td>
                                      <div class="chart-scale">
                                      <input  type="radio" value="Usable" name="quality" />Usable
                                      <input  type="radio" value="Good" name="quality" />Good
                                      <input  type="radio" value="New and unused" name="quality" />new and unused
                        
                                    </div>
                                  </div>
                                </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Years of usage:
                                    </td>
                                    <td>
                                      <input type="number" name="prod_usage" >
                                    </td>
                                </tr>
                               
                                <tr>
                                    <td>
                                        Detailed description:
                                    </td>
                                    <td>
                                        <textarea name="remarks"></textarea>
                                    </td>
                                </tr>
                                <tr>
                                  <td colspan="2" style="text-align: center;">
                                    <a href="#" ><button type="submit" class="btn btn-danger">Upload product</button></a>
                                  </td>
                                </tr>
                            </table>
                           
                    </div>
            </div>
          </form>        
            </div>
          </div>
    </section>

    <%- include("footer") -%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="./index.js"></script>
    <script>
      function previewImage(event) {
          const input = event.target;
          const preview = document.getElementById('preview');

          if (input.files && input.files[0]) {
              const reader = new FileReader();

              reader.onload = function (e) {
                  preview.src = e.target.result;
              };

              reader.readAsDataURL(input.files[0]);
          }
      }
  </script>

<script>
  document.getElementById('myForm').addEventListener('submit', function(event) {
    // Prevent the default form submission
    event.preventDefault();

    // Display a message (you can customize this)
    alert('Form submitted. Redirecting...');

    // Submit the form after a delay (you can customize the delay)
    setTimeout(() => {
      this.submit();
    }, 1000); // 1000 milliseconds (1 second) delay as an example
  });
</script>
</body>
</html>